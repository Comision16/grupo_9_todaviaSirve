<!DOCTYPE html>
<html lang="en">
<%- include('partials/head') %>

<body class="home">
    <%- include('partials/header') %>

    <main class="main">
        <section class="home__main__section">
            <div>
                <ul>
                    <li>
                        <h3>Tu Carrito(3)</h3>
                    </li>
                </ul>
                <hr>
                <div class="productos_container">
                    <% products.forEach(producto => { %>
                        <article class="producto_box">
                            <div>
                                <img src="/images/productos/<%= producto.image %>" alt="<%= producto.name %>">
                            </div>
                            <div class="info_product">
                                <h4><%= producto.name %></h4>
                                <p>$ <%= producto.price %></p>
                                <button class="button_main">
                                    <p>Eliminar</p>
                                </button>
                            </div>
                        </article>
                    <% }); %>
                </div>
                <div class="precio_total_box">
                    <div class="price_total">
                        <h3>TOTAL: $ <%= totalAmount %> </h3>
                    </div>
                </div>
                <div class="buy_continue">
                    <button class="button_main">
                        <h3>Elegir m√°s productos</h3>
                    </button>
                    <button class="button_main">
                        <h3>Continuar Compra</h3>
                    </button>
                </div>
            </div>
        </section>
    </main>
    <%- include('partials/footer') %>
</body>
</html>
