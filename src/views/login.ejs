<!DOCTYPE html>
<html lang="en">
    <%- include('partials/head') %>
<body>
    <%- include('partials/header') %>
    
    <main class="login--main">
        <div class="login__main--box">
            <div class="login__main__box--title">
                <h2>Ingresá</h2>
            </div>
            <div class="login__main__box--formbox">
                <form class="login__main__box__formbox--form" action="/" method="get">
                    <div>
                        <label class="login__main__box__formbox--campobox">
                            <input class="login__main__box__formbox--campo" type="text" name="name" id="name" placeholder="Nombre" required>
                        </label>
                    </div>
                    <div class="login__main__box__formbox--campobox">
                        <label>
                            <input class="login__main__box__formbox--campo" type="email" name="email" id="email" placeholder="Correo electronico" required>
                        </label>
                    </div>
                    <div class="login__main__box__formbox--campobox">
                        <label>
                            <input class="login__main__box__formbox--campo" type="password" name="password" id="password" placeholder="Contraseña" required>
                        </label>
                    </div>
                    <div class="login__main__box__formbox--buttonbox">
                        <a href="/">
                            <button class="login__main__box__formbox--button">Ingresar</button>
                        </a>
                        <a href="/users/register">
                            <button class="login__main__box__formbox--button2" type="button">Crear cuenta</button>
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </main>
    <%- include('partials/footer') %>
    
</body>
</html>